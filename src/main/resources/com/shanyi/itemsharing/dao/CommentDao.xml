<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shanyi.itemsharing.dao.CommentDao">

    <sql id="table">comment</sql>
    <sql id="commentColumns">
    id,content,user_id,news_id,created_date
    </sql>

    <resultMap id="commentMap" type="comment">
        <id property="id" column="id"/>
        <result property="content" column="content"/>
        <result property="newsId" column="news_id"/>
        <result property="createdDate" column="created_date"/>
        <association property="user" column="user_id" javaType="user"
                     select="com.shanyi.itemsharing.dao.UserDao.selectUserById"/>
    </resultMap>
    <select id="selectCommentByNewsId" resultMap="commentMap">
        select
        <include refid="commentColumns"/>
        from
        <include refid="table"/>
        where news_id=#{Newsid}
    </select>

    <insert id="insertComment" >
    insert into
    <include refid="table"/>
    (<include refid="commentColumns"/>)
    value (#{id},#{content},#{user.id},#{newsId},now())
    </insert>
</mapper>