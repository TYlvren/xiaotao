<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cskaoyan.distributionnews.dao.ConversationDao">

    <sql id="table">conversation</sql>


    <resultMap id="conversationMap" type="conversation">
        <id property="conversationId" column="id"/>
        <result property="createdDate" column="created_date"/>
        <result property="content" column="content"/>
        <result property="messageNum" column="message_num"/>
        <association property="user" column="user_id" javaType="user"
                     select="com.cskaoyan.distributionnews.dao.UserDao.selectUserById"/>
    </resultMap>
    <select id="selectConversationById" resultMap="conversationMap">
      select
      id,user_id,created_date,content,message_num
      from
      <include refid="table"/>
      where
      id=#{conversationId}
    </select>

    <select id="selectConversationByIdSet" resultMap="conversationMap">
        select
        id,user_id,created_date,content,message_num
        from
        <include refid="table"/>
        <where>
            <foreach collection="set" item="conversationId">
                or id=#{conversationId}
            </foreach>
        </where>
    </select>

    <insert id="insertConversation">
        insert into
        <include refid="table"/>
        (id,user_id,created_date,content,message_num)
        value (#{conversationId},#{user.id},now(),#{content},1)
    </insert>

    <update id="increaseMessageNum">
        update
        <include refid="table"/>
        set message_num = message_num+1
        where
        id=#{conversationId}
    </update>

</mapper>