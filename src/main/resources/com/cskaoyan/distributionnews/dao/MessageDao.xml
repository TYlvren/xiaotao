<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cskaoyan.distributionnews.dao.MessageDao">

    <sql id="table">message</sql>
    <sql id="messageColumns">
        id,from_name,to_name,content,created_date
    </sql>

    <insert id="insertMessage">
      insert into
      <include refid="table"/>
      (<include refid="messageColumns"/>)
      value (#{id},#{fromName},#{toName},#{content},now())
    </insert>

    <select id="selectMessageByFromName" resultType="message">
        select
        id,from_name as fromName,to_name as toName,content,created_date ad createdDate
        from
        <include refid="table"/>
        where from_name = #{fromName}
    </select>
</mapper>